<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleview"
            android:layout_width="366dp"
            android:layout_height="77dp"
            android:layout_marginTop="32dp"
            android:paddingLeft='15dp'
            android:text="TITLE"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="142dp"
            android:layout_height="216dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/authorview"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/authorview"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:text="Author"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/synopsis"
            app:layout_constraintStart_toStartOf="parent"></TextView>

        <TextView
            android:id="@+id/ratingview"
            android:layout_width="162dp"
            android:layout_height="74dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft='30dp'
            android:text="Rating"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/releasedateview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/titleview"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/genreview"
            android:layout_width="162dp"
            android:layout_height="74dp"
            android:layout_marginEnd="20dp"
            android:paddingLeft='30dp'
            android:text="Genre"
            android:textSize="10dp"
            app:layout_constraintBottom_toTopOf="@+id/synopsis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toEndOf="@+id/imageView2" />

        <TextView
            android:id="@+id/releasedateview"
            android:layout_width="162dp"
            android:layout_height="74dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft='30dp'
            android:text="Date"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/genreview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toEndOf="@+id/imageView2" />

        <TextView
            android:id="@+id/synopsis"
            android:layout_width="366dp"
            android:layout_height="231dp"
            android:layout_marginBottom="16dp"
            android:padding='10dp'
            android:text="Synopsis"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
