<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/titleview"
            android:layout_width="366dp"
            android:layout_height="77dp"
            android:layout_marginTop="7dp"
            android:paddingTop="20dp"
            android:paddingLeft='15dp'
            android:text="Data not available"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="142dp"
            android:layout_height="216dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toTopOf="@+id/authorview"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/authorview"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Author Data not available"
            android:textColor="#0000FF"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/synopsis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/favourite"></TextView>


        <TextView
            android:id="@+id/showrate"
            android:layout_width="155dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft='10dp'
            android:text="Rating Data not available"
            android:textColor="#000000"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/releasedateview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/titleview"
            app:layout_constraintVertical_bias="0.758" />

        <TextView
            android:id="@+id/releasedateview"
            android:layout_width="165dp"
            android:layout_height="42dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft='10dp'
            android:text="Date Data not available"
            android:textColor="#000000"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/genreview_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.607"
            app:layout_constraintStart_toEndOf="@+id/imageView2" />

        <TextView
            android:id="@+id/synopsis"
            android:layout_width="366dp"
            android:layout_height="231dp"
            android:layout_marginBottom="16dp"
            android:padding='10dp'
            android:text="Synopsis"
            android:textSize="16dp"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/addreview"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="8dp"
            android:text="Add review"
            android:textColor="#000000"
            android:textSize="13dp"
            app:layout_constraintBottom_toTopOf="@+id/synopsis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintStart_toEndOf="@+id/authorview"
            app:layout_constraintTop_toBottomOf="@+id/genreview_layout"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/reviewpage"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:text="Reviews"
            android:textColor="#000000"
            android:textSize="13dp"
            app:layout_constraintStart_toEndOf="@+id/addreview"
            app:layout_constraintTop_toBottomOf="@+id/genreview_layout" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/liked"
            android:id="@+id/favourite"
            android:layout_width="160dp"
            android:layout_height="42dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="312dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></Button>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/genreview_layout"
            android:layout_width="163dp"
            android:layout_height="68dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="92dp"
            android:paddingLeft='10dp'
            android:paddingRight='10dp'
            app:layout_constraintBottom_toTopOf="@+id/synopsis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.97"
            app:layout_constraintStart_toEndOf="@+id/imageView2" />

        <Button
            android:id="@+id/getBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="get this book"
            tools:layout_editor_absoluteX="263dp"
            tools:layout_editor_absoluteY="69dp"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>
